<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/fragment_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/view_bottom_margin" />

    <com.luseen.spacenavigation.SpaceNavigationView
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        app:centre_button_color="@color/colorAccent"
        app:centre_button_icon="@drawable/ic_person_outline"
        app:inactive_centre_button_icon_color="@android:color/black"
        app:space_background_color="@color/colorPrimary"
        app:space_item_icon_size="0dp" />

</FrameLayout>
